@Article{hamill_2000,
  Title                    = {A Hybrid Ensemble {K}alman Filter/{3D} Variational Analysis Scheme},
  Author                   = {Hamill, Thomas M. and Snyder, Chris},
  Journal                  = {Monthly Weather Review},
