  Keywords                 = {Ensemble Kalman filter}
}

@Article{gurol_2014,
  Title                    = {B-preconditioned minimization algorithms for variational data assimilation with the dual formulation},
  Author                   = {G\"urol, S. and Weaver, A. T. and Moore, A. M. and Piacentini, A. and Arango, H. G. and Gratton, S.},
