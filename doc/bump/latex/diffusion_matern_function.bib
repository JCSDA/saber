@Article{menetrier_2014,
  Title                    = {Estimation and diagnosis of heterogeneous flow-dependent background-error covariances at the convective scale using either large or small ensembles},
  Author                   = {M\'en\'etrier, Benjamin and Montmerle, Thibaut and Berre, Lo\"ik and Michel, Yann},
