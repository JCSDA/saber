@Article{hunt_2007,
  Title                    = {Efficient data assimilation for spatiotemporal chaos: A local ensemble transform {K}alman filter},
  Author                   = {Brian R. Hunt and Eric J. Kostelich and Istvan Szunyogh},
  Journal                  = {Physica D: Nonlinear Phenomena },
  Year                     = {2007},
