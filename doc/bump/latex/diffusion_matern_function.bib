@Article{vetra-carvalho_2012,
  Title                    = {Breakdown of hydrostatic balance at convective scales in the forecast errors in the {Met Office Unified Model}},
  Author                   = {Vetra-Carvalho, S. and Dixon, M. and Migliorini, S. and Nichols, N. K. and Ballard, S. P.},
