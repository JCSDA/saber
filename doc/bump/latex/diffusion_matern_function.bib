@Article{bowler_2013,
  Title                    = {Tests of different flavours of {EnKF} on a simple model},
  Author                   = {Bowler, Neill E. and Flowerdew, Jonathan and Pring, Stephen R.},
  Journal                  = {Quarterly Journal of the Royal Meteorological Society},
